<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Scrollable Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"> <!-- Space for Bottom Nav -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. BLUE HEADER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4E7DFF"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Top Row: Name and Notification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Welcome Back"
                            android:textColor="#D1E3FF"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_username"
                            android:text="Jacob Jones"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_notifications"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_popup_reminder"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <!-- Search Bar (Visual only for now) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <!-- The Search Input -->
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_chat_left"
                        android:drawableStart="@android:drawable/ic_menu_search"
                        android:drawablePadding="12dp"
                        android:hint="Search doctor..."
                        android:paddingStart="12dp"
                        android:textColor="#000" />

                    <!-- THE DROPDOWN LIST (Hidden by default) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="200dp"/> <!-- Limits height so it doesn't take full screen -->

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- 2. CATEGORIES SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Category"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- 1. DOCTOR / CHECKUP -->
                <LinearLayout
                    android:id="@+id/btn_cat_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_calendar"
                        android:background="#E3F2FD"
                        android:padding="12dp"/>
                    <TextView
                        android:text="Checkup"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_height="20dp"
                        android:layout_width="50dp"/>
                </LinearLayout>

                <!-- 2. PHARMACY -->
                <LinearLayout
                    android:id="@+id/btn_cat_pharmacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:background="#FFF3E0"
                        android:padding="12dp"/>
                    <TextView
                        android:text="Pharmacy"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_height="20dp"
                        android:layout_width="60dp"/>
                </LinearLayout>

                <!-- 3. HOSPITAL (Maps) -->
                <LinearLayout
                    android:id="@+id/btn_cat_hospital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:background="#FFEBEE"
                        android:padding="12dp"/>
                    <TextView
                        android:text="Hospital"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_height="20dp"
                        android:layout_width="50dp"/>
                </LinearLayout>

                <!-- 4. EMERGENCY (Dialer) -->
                <LinearLayout
                    android:id="@+id/btn_cat_emergency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:background="#FFCDD2"
                        android:padding="12dp"/>
                    <TextView
                        android:text="Emergency"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_height="20dp"
                        android:layout_width="70dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SCHEDULE TODAY HEADER -->
            <TextView
                android:id="@+id/tv_today_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="Schedule today"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:visibility="gone"/> <!-- Hidden by default until data loads -->

            <!-- SCHEDULE TODAY LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:visibility="gone"/> <!-- Hidden by default until data loads -->

            <!-- 3. DOCTOR RECOMMENDATION SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Doctor's Recommendation"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="#4E7DFF" />
            </LinearLayout>

            <!-- The Horizontal List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_doctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>